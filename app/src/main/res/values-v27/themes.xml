<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for API 27+ -->
    <style name="Base.Theme.Realtopia" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/game_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimaryContainer">@color/game_primary</item>
        <item name="colorOnPrimaryContainer">@android:color/white</item>
        
        <item name="colorSecondary">@color/game_secondary</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorSecondaryContainer">@color/game_secondary</item>
        <item name="colorOnSecondaryContainer">@android:color/white</item>
        
        <item name="colorTertiary">@color/game_accent</item>
        <item name="colorOnTertiary">@android:color/white</item>
        <item name="colorTertiaryContainer">@color/game_accent</item>
        <item name="colorOnTertiaryContainer">@android:color/white</item>
        
        <item name="colorError">@color/game_error</item>
        <item name="colorOnError">@android:color/white</item>
        <item name="colorErrorContainer">@color/game_error</item>
        <item name="colorOnErrorContainer">@android:color/white</item>
        
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorOnBackground">@android:color/black</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="colorSurfaceVariant">@android:color/white</item>
        <item name="colorOnSurfaceVariant">@android:color/black</item>
        
        <item name="android:statusBarColor">@color/game_primary</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Hide ActionBar -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Realtopia" parent="Base.Theme.Realtopia" />
</resources>
